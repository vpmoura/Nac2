<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sumFragment">

    <fragment
        android:id="@+id/sumFragment"
        android:name="com.fiap.soma.SumFragment"
        android:label="fragment_sum"
        tools:layout="@layout/fragment_sum">
        <action
            android:id="@+id/action_sumFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.fiap.soma.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="number1"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="number2"
            app:argType="integer"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_resultFragment_to_sumFragment"
            app:destination="@id/sumFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>